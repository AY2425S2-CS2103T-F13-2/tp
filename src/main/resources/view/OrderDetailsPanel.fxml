<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label fx:id="selectedOrderIdLabel" text="Order ID: ">
      <styleClass>
        <String fx:value="order-id-label" />
      </styleClass>
    </Label>
    <Label fx:id="clientNameLabel" styleClass="order-item-label" text="Client: " />
    <Label fx:id="orderDateTimeLabel" styleClass="order-item-label" text="Items: " />

    <!-- list view to display pastries and their quantities -->
    <ListView fx:id="itemsListView" styleClass="order-item-list" maxHeight="150"/>

    <!-- Label for total price -->
    <Label fx:id="totalPriceLabel" styleClass="order-item-label"/>    
    
    <!-- Label for status -->
    <Label fx:id="orderStatusLabel" styleClass="status-box" text="Status" />    

</VBox>
